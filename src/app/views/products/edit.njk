{% extends "layout.njk" %}

{% block content %}
<section class="container form">
    <form method="POST" action="/products?_method=PUT" enctype="multipart/form-data">
        <div class="header">
            <h3>Editar Produto</h3>
        </div>

        <div class="fields">
            {%include 'products/fields.njk'%}
            <input type="hidden" name="id" value="{{ product.id }}">
        </div>

        
        <button class="button edit" type="submit">Atualizar</button>
    </form>
    <form id="btn-delete" method="POST" action="/products?_method=DELETE">
        <input type="hidden" name="id" value="{{ product.id }}">
        <button class="button delete" type="submit">Delete</button>
    </form>
</section>

<script>
    const btnDelete = document.querySelector('#btn-delete')
    btnDelete.addEventListener('submit',(e) => {
        const confirmation = confirm("Deletar esse cadastro?")
        if(!confirmation){
            e.preventDefault()
        }
    })
</script>
{% endblock content %}